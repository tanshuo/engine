define start:
    declare variable sp as vector2;
    declare function round 1;
    declare variable left int;
    declare variable right int;
    <"position"> change to <0,0> in I;
enddef;

define update:
    sp set <0,0>;
    get <"touch_position"> to sp;
    sp getX to left;
    sp getY to right;
    left set <3>;
    right set <4>;
    calculate <"(sqrt(left * 4 - 1 * right))">;
    say result;
    left set result;
    calculate <sp / result>;
    move result;
enddef;

define round speed:

    get <"position"> to debug;
    <"position"> change to speed in I;
    say debug;
enddef;
